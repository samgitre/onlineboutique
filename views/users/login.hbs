<div class="container">

    <form action="../users/log-in" method="post">
        <div class="row col-lg-offset-2">
            <h3 style="color: orangered"> Log In to manage your account </h3>

            <div class="row">
                <div class="form-group col-md-4">
                    First name
                    <input type="text" class="form-control" name="username">
                </div>
            </div>
            <div class="row">
                <div class="form-group col-md-4">
                    Last name
                    <input type="password" class="form-control" name="password">
                </div>
            </div>
            <div class="row">

                <div class="col-md-2">
                    <input type="submit" class="btn btn-md" style="background-color: orangered; color: white" value="Login" name="submit">
                </div>
                <a href="/users/sign-up" class="glyphicon glyphicon-user btn" style="background-color: orangered; color: #ffffff;"> Create account</a>
            </div>
        </div>

        <br><br><br>

    </form>
</div>
