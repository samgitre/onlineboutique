
    <div  style="padding-top:20px">
        {{# each products}}
        <div class="row">
            {{# each this}}

                <div class="col-md-4">
                    <div class="thumbnail ">
                        <a href="/product-details">
                            <img src="{{ this.productImage }}" class="img zoom-img" width="196" height="260" alt="...">
                        </a>
                        <div class="caption">
                            <h4 class="liz">{{ this.title }}</h4>

                            <div class="home-product-bottom">
                                <h4><a href="/cart/add-to-cart/{{ this._id}}" class="btn btn-sm btn-orange">Add to cart</a></h4>
                            </div>
                            <div class="srch">
                                <span> ${{ this.price }}</span>
                            </div>

                        </div>
                    </div>
                </div>
            {{/each}}
        </div>
        {{/each}}
    </div>

