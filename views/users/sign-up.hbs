<div class="container">

        {{#if errors}}

            {{#each errors}}
            <div class="row col-md-offset-2">
                <div class="alert alert-danger col-md-4"> {{ msg }}</div>
            </div>
            {{/each}}

        {{/if}}


    <form action="../users/createUser" method="post">
        <div class="row col-lg-offset-2">
            <h3 style="color: orangered"> Sign up for new account </h3>

             <div class="row">
            <div class="form-group col-md-4">
                First name
                <input type="text" class="form-control" name="firstName">
            </div>
             </div>
            <div class="row">

            <div class="form-group col-md-4">
                Last name
                <input type="text" class="form-control" name="lastName">
            </div>
            </div>

            <div class="row">

            <div class="form-group col-md-4">
                Email (this is your username)
                <input type="email" class="form-control" name="email">
            </div>
            </div>
            <div class="row">

            <div class="form-group col-md-4">
                Password
                <input type="password" class="form-control" name="password">
            </div>
            </div>

            <div class="row">

            <div class="col-md-2">
                <input type="submit" class="btn btn-md" style="background-color: orangered; color: white" value="Create account" name="submit">
            </div>
                <a href="/users/login" class="glyphicon glyphicon-log-in btn" style="background-color: orangered; color: #ffffff;"> Login</a>
            </div>
        </div>

        <br><br><br>

    </form>

</div>
