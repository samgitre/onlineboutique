
<p>Welcome to {{title}}</p>

{{#each products}}
    <div  style="padding-top:20px">
        <div class="row">
            {{#each this}}

                <div class="col-sm-6 col-md-3 home-grid grow">
                    <div class="thumbnail ">
                        <a href="/product-details">
                            <img src="{{ this.productImage }}" class="img zoom-img" alt="...">
                        </a>
                        <div class="caption">
                            <h4 class="liz">{{ this.title }}</h4>


                            <div class="home-product-bottom">
                                <h4><a href="cart/add-to-cart">Add to cart</a></h4>
                            </div>
                            <div class="srch">
                                <span> ${{ this.price }}</span>
                            </div>

                        </div>
                    </div>
                </div>

            {{/each}}

        </div>
    </div>
{{/each}}
<hr>
