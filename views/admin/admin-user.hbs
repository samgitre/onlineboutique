

    <form action="../admin/admin-user" method="post">
        <div class="row col-lg-offset-2">
            <h3 class="titles"> Add admin user account </h3>

            <div class="row">
                <div class="form-group col-md-6">
                    First name
                    <input type="text" class="form-control" name="firstName">
                </div>
            </div>
            <div class="row">

                <div class="form-group col-md-6">
                    Last name
                    <input type="text" class="form-control" name="lastName">
                </div>
            </div>

            <div class="row">

                <div class="form-group col-md-6">
                    Email (this is your username)
                    <input type="email" class="form-control" name="email">
                </div>
            </div>
            <div class="row">

                <div class="form-group col-md-6">
                    Password
                    <input type="password" class="form-control" name="password">
                </div>
            </div>

            <div class="row">
                <div class="form-group col-md-6">
                    Is Admin
                    <input type="checkbox" class="form-control" name="isAdmin">
                </div>
                <input type="text" class="hidden" name="setAdmin">
            </div>


            <div class="row">

                <div class="col-md-4">
                    <input type="submit" class="btn btn-md btn-orange"  value="Create account" name="submit">
                </div>
                <a href="/admin/admin-login" class="glyphicon glyphicon-log-in btn btn-default" > Login</a>
            </div>
        </div>

        <br><br><br>

    </form>

